SHELL=/bin/sh

.PHONY: LIBSYS LIBSYS_CLEAN

LIBSYS_TARGET_INCLUDE_DIR=${RUNTIME_INCLUDE}/${LIBSYS_NAME}

LIBSYS: ${LIBSYS_TARGET_INCLUDE_DIR} \
		${LIBSYS_TARGET_INCLUDE_DIR}/${LIBSYS_HEADER_TRIGGER}
	@echo MAKE LIBSYS 

LIBSYS_CLEAN: ${LIBSYS_TARGET_INCLUDE_DIR}/${LIBSYS_HEADER_TRIGGER}_clean \
			${LIBSYS_TARGET_INCLUDE_DIR}_clean
	@echo MAKE LIBSYS_CLEAN 

${LIBSYS_TARGET_INCLUDE_DIR}:
	$(CD) ${LIBSYS} && $(MAKE) -f Makefile.${LIBSYS_NAME} $@

${LIBSYS_TARGET_INCLUDE_DIR}_clean:
	$(CD) ${LIBSYS} && $(MAKE) -f Makefile.${LIBSYS_NAME} $@

${LIBSYS_TARGET_INCLUDE_DIR}/${LIBSYS_HEADER_TRIGGER}:
	$(CD) ${LIBSYS} && $(MAKE) -f Makefile.${LIBSYS_NAME} $@

${LIBSYS_TARGET_INCLUDE_DIR}/${LIBSYS_HEADER_TRIGGER}_clean:
	$(CD) ${LIBSYS} && $(MAKE) -f Makefile.${LIBSYS_NAME} $@

