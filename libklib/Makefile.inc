SHELL=/bin/sh

.PHONY: LIBKLIB LIBKLIB_CLEAN

LIBKLIB_TARGET_INCLUDE_DIR=${RUNTIME_INCLUDE}/${LIBKLIB_NAME}

LIBKLIB: ${LIBKLIB_TARGET_INCLUDE_DIR} \
		${LIBKLIB_TARGET_INCLUDE_DIR} \
		${LIBKLIB_TARGET_INCLUDE_DIR}/${LIBKLIB_HEADER_TRIGGER} \
		${LIBKLIB_TARGET_INCLUDE_DIR}/${LIBKLIB_HEADER_FAKE_TRIGGER}
	@echo MAKE LIBKLIB 

LIBKLIB_CLEAN: ${LIBKLIB_TARGET_INCLUDE_DIR}/${LIBKLIB_HEADER_TRIGGER}_clean \
			${LIBKLIB_TARGET_INCLUDE_DIR}/${LIBKLIB_HEADER_FAKE_TRIGGER}_clean \
			${LIBKLIB_TARGET_INCLUDE_DIR}_clean
	@echo MAKE LIBKLIB_CLEAN 

${LIBKLIB_TARGET_INCLUDE_DIR}:
	$(CD) ${LIBKLIB} && $(MAKE) -f Makefile.${LIBKLIB_NAME} $@

${LIBKLIB_TARGET_INCLUDE_DIR}_clean:
	$(CD) ${LIBKLIB} && $(MAKE) -f Makefile.${LIBKLIB_NAME} $@

${LIBKLIB_TARGET_INCLUDE_DIR}/${LIBKLIB_HEADER_TRIGGER}:
	$(CD) ${LIBKLIB} && $(MAKE) -f Makefile.${LIBKLIB_NAME} $@

${LIBKLIB_TARGET_INCLUDE_DIR}/${LIBKLIB_HEADER_TRIGGER}_clean:
	$(CD) ${LIBKLIB} && $(MAKE) -f Makefile.${LIBKLIB_NAME} $@

${LIBKLIB_TARGET_INCLUDE_DIR}/${LIBKLIB_HEADER_FAKE_TRIGGER}:
	$(CD) ${LIBKLIB} && $(MAKE) -f Makefile.${LIBKLIB_NAME} $@

${LIBKLIB_TARGET_INCLUDE_DIR}/${LIBKLIB_HEADER_FAKE_TRIGGER}_clean:
	$(CD) ${LIBKLIB} && $(MAKE) -f Makefile.${LIBKLIB_NAME} $@

