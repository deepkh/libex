SHELL := /bin/bash

include $(MK_RESET)
################ download, mkdir, extract ##########
TARGET_PKG_BASE_DIR=$(I686W64MINGW32DLLS_OBJS_DIR)
TARGET_PKG_BASE_DIR_CLEAN=$(addsuffix _clean,$(TARGET_PKG_BASE_DIR))
TARGET_PKG_NAME=$(I686W64MINGW32DLLS_NAME)
TARGET_PKG_SUBNAME=$(I686W64MINGW32DLLS_SUBNAME)
TARGET_PKG_URL=/opt/backup/toolchain/$(TARGET_PKG_NAME).$(TARGET_PKG_SUBNAME)
TARGET_PKG_FILE=$(TARGET_PKG_BASE_DIR)/$(TARGET_PKG_NAME).$(TARGET_PKG_SUBNAME)
TARGET_PKG_FILE_CLEAN=$(addsuffix _clean,$(TARGET_PKG_FILE))
TARGET_PKG_DIR=$(TARGET_PKG_BASE_DIR)/$(TARGET_PKG_NAME)
TARGET_PKG_DIR_CLEAN=$(addsuffix _clean,$(TARGET_PKG_DIR))
TARGET_PKG_MV_DIR_CMD=

################ configure ##########
TARGET_PKG_CONFIG_H=${TARGET_PKG_DIR}/${I686W64MINGW32DLLS_CONFIG_H}
TARGET_PKG_CONFIG=true

################ make, make install ##########
TARGET_PKG_BIN=${I686W64MINGW32DLLS_BIN}
TARGET_PKG_BIN_CLEAN=${I686W64MINGW32DLLS_BIN_CLEAN}
TARGET_PKG_BIN_MAKE_CMD=$(CP) * ${RUNTIME_BIN}/
include $(MK_PKG)


