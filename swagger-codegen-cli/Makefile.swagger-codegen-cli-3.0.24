SHELL := /bin/bash

include $(MK_RESET)
################ download, mkdir, extract ##########
TARGET_PKG_BASE_DIR=$(SWAGGERCODEGENCLI_OBJS_DIR)
TARGET_PKG_BASE_DIR_CLEAN=$(addsuffix _clean,$(TARGET_PKG_BASE_DIR))
TARGET_PKG_NAME=$(SWAGGERCODEGENCLI_NAME)
TARGET_PKG_SUBNAME=$(SWAGGERCODEGENCLI_SUBNAME)
TARGET_PKG_URL=
TARGET_PKG_FILE=
TARGET_PKG_FILE_CLEAN=
TARGET_PKG_DIR=$(TARGET_PKG_BASE_DIR)/$(TARGET_PKG_NAME)
TARGET_PKG_DIR_CLEAN=$(addsuffix _clean,$(TARGET_PKG_DIR))
TARGET_PKG_MV_DIR_CMD=mkdir $(TARGET_PKG_DIR)

################ configure ##########
TARGET_PKG_CONFIG_H=${TARGET_PKG_DIR}/${SWAGGERCODEGENCLI_CONFIG_H}
TARGET_PKG_CONFIG=true

################ make, make install ##########
TARGET_PKG_BIN=${SWAGGERCODEGENCLI_BIN}
TARGET_PKG_BIN_CLEAN=${SWAGGERCODEGENCLI_BIN_CLEAN}
TARGET_PKG_BIN_MAKE_CMD=wget https://repo1.maven.org/maven2/io/swagger/codegen/v3/swagger-codegen-cli/3.0.24/swagger-codegen-cli-3.0.24.jar -O ${TARGET_PKG_BIN}
include $(MK_PKG)


