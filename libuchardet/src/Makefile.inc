SHELL=/bin/sh

.PHONY: LIBUCHARDET LIBUCHARDET_CLEAN

LIBUCHARDET_TARGET_INCLUDE_DIR=${RUNTIME_INCLUDE}/${LIBUCHARDET_NAME}

LIBUCHARDET: ${LIBUCHARDET_TARGET_INCLUDE_DIR} \
		${LIBUCHARDET_TARGET_INCLUDE_DIR}/${LIBUCHARDET_HEADER_TRIGGER} \
		${RUNTIME_LIB}/${LIBUCHARDET_LIB}
	@echo MAKE LIBUCHARDET 

LIBUCHARDET_CLEAN: ${LIBUCHARDET_TARGET_INCLUDE_DIR}/${LIBUCHARDET_HEADER_TRIGGER}_clean \
			${LIBUCHARDET_TARGET_INCLUDE_DIR}_clean \
			${LIBUCHARDET_LIB}_clean
	@echo MAKE LIBUCHARDET_CLEAN 

${LIBUCHARDET_TARGET_INCLUDE_DIR}:
	$(CD) ${LIBUCHARDET} && $(MAKE) -f Makefile.${LIBUCHARDET_NAME} $@

${LIBUCHARDET_TARGET_INCLUDE_DIR}_clean:
	$(CD) ${LIBUCHARDET} && $(MAKE) -f Makefile.${LIBUCHARDET_NAME} $@

${LIBUCHARDET_TARGET_INCLUDE_DIR}/${LIBUCHARDET_HEADER_TRIGGER}:
	$(CD) ${LIBUCHARDET} && $(MAKE) -f Makefile.${LIBUCHARDET_NAME} $@

${LIBUCHARDET_TARGET_INCLUDE_DIR}/${LIBUCHARDET_HEADER_TRIGGER}_clean:
	$(CD) ${LIBUCHARDET} && $(MAKE) -f Makefile.${LIBUCHARDET_NAME} $@

${RUNTIME_LIB}/${LIBUCHARDET_LIB}:
	@echo $@
	$(CD) ${LIBUCHARDET} && $(MAKE) -f Makefile.${LIBUCHARDET_NAME} ${LIBUCHARDET_LIB}

${LIBUCHARDET_LIB}_clean:
	$(CD) ${LIBUCHARDET} && $(MAKE) -f Makefile.${LIBUCHARDET_NAME} ${LIBUCHARDET_LIB}_clean

