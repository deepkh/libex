SHELL := /bin/bash


################ Build external/libfdkaac/libfdkaac-2.1.8.tar.gz ##########
include $(MK_RESET)
TARGET_PKG_URL=https://sourceforge.net/projects/opencore-amr/files/fdk-aac
TARGET_PKG_FILE=${LIBFDKAAC_NAME}.${LIBFDKAAC_SUBNAME}
TARGET_PKG_DIR=${LIBFDKAAC_NAME}
TARGET_PKG_SUBNAME=${LIBFDKAAC_SUBNAME}
TARGET_PKG_CONFIG_H=${LIBFDKAAC_NAME}/${LIBFDKAAC_CONFIG_LOG}
TARGET_PKG_CONFIG= 
ifneq (, $(findstring mingw, $(PLATFORM)))
TARGET_PKG_CONFIG+=LDFLAGS='-Wl,-static -Wl,--output-def=libfdk-aac-0.def' ./configure --prefix=$(RUNTIME) --disable-static --enable-shared --host=$(MINGW_W64)
else ifneq (, $(findstring linux, $(PLATFORM)))
TARGET_PKG_CONFIG+=./configure --prefix=$(RUNTIME) --disable-static --enable-shared
else ifneq (, $(findstring mac, $(PLATFORM)))
TARGET_PKG_CONFIG+=./configure --prefix=$(RUNTIME) --disable-static --enable-shared
else ifneq (, $(findstring arm-linux-gnueabihf, $(PLATFORM)))
MY_EX_CFLAGS='-mcpu=cortex-a7 -mfpu=neon-vfpv4 -mfloat-abi=hard'
MY_EX_LDFLAGS=$(MY_EX_CFLAGS)
TARGET_PKG_CONFIG+=CFLAGS=$(MY_EX_CFLAGS) CXXFLAGS=$(MY_EX_CFLAGS) CPPFLAGS=$(MY_EX_LDFLAGS) LDFLAGS=$(MY_EX_LDFLAGS) ./configure --prefix=$(RUNTIME) --disable-static --enable-shared --host=$(MINGW_W64)
endif
TARGET_PKG_LIB=${RUNTIME_LIB}/${LIBFDKAAC_LIB}
TARGET_PKG_LIB_CLEAN=${TARGET_PKG_LIB}_clean
include $(MK_PKG)

