SHELL=/bin/sh

.PHONY: LIBLODEPNG LIBLODEPNG_CLEAN

LIBLODEPNG_TARGET_INCLUDE_DIR=${RUNTIME_INCLUDE}/${LIBLODEPNG_NAME}

LIBLODEPNG: ${LIBLODEPNG_TARGET_INCLUDE_DIR} \
		${LIBLODEPNG_TARGET_INCLUDE_DIR}/${LIBLODEPNG_HEADER_TRIGGER} \
		${RUNTIME_LIB}/${LIBLODEPNG_LIB}
	@echo MAKE LIBLODEPNG 

LIBLODEPNG_CLEAN: ${LIBLODEPNG_TARGET_INCLUDE_DIR}/${LIBLODEPNG_HEADER_TRIGGER}_clean \
			${LIBLODEPNG_TARGET_INCLUDE_DIR}_clean \
			${LIBLODEPNG_LIB}_clean
	@echo MAKE LIBLODEPNG_CLEAN 

${LIBLODEPNG_TARGET_INCLUDE_DIR}:
	$(CD) ${LIBLODEPNG} && $(MAKE) -f Makefile.${LIBLODEPNG_NAME} $@

${LIBLODEPNG_TARGET_INCLUDE_DIR}_clean:
	$(CD) ${LIBLODEPNG} && $(MAKE) -f Makefile.${LIBLODEPNG_NAME} $@

${LIBLODEPNG_TARGET_INCLUDE_DIR}/${LIBLODEPNG_HEADER_TRIGGER}:
	$(CD) ${LIBLODEPNG} && $(MAKE) -f Makefile.${LIBLODEPNG_NAME} $@

${LIBLODEPNG_TARGET_INCLUDE_DIR}/${LIBLODEPNG_HEADER_TRIGGER}_clean:
	$(CD) ${LIBLODEPNG} && $(MAKE) -f Makefile.${LIBLODEPNG_NAME} $@

${RUNTIME_LIB}/${LIBLODEPNG_LIB}: 
	@echo $@
	$(CD) ${LIBLODEPNG} && $(MAKE) -f Makefile.${LIBLODEPNG_NAME} ${LIBLODEPNG_LIB}

${LIBLODEPNG_LIB}_clean:
	$(CD) ${LIBLODEPNG} && $(MAKE) -f Makefile.${LIBLODEPNG_NAME} ${LIBLODEPNG_LIB}_clean

